<div class="container">
  <div class="row dummy_margin">
    <div class="col-sm-12 col-md-6 blog-panel">
      <!--
      登録ユーザー情報
      -->
      <h1><%= @user.name %>のページ</h1>
      <p>メールアドレス...<%= @user.email %></p>

      <!--
      投稿
      -->
			<h2>投稿一覧</h2>

			<!--<div class="content-block" id="blog">-->
			<!--<div class="container blog-sec">-->
			<section class="block-body" id="blog">
				<div class="row">
				  <% @post_instag.each do |insta| %>
					<div class="col-sm-4 blog-post3">
						<!--<img src="/images/bike_water1-1000x600.jpg">-->
						<div class="blog-post_content">
							<%= image_tag insta.image.url if insta.image? %><BR>
							<%= link_to insta.content, instag_path(insta.id) %>							
						</div>
						<div class="date"><%= insta.created_at %></div>
						<div>
						  <%= link_to "編集", edit_instag_path(insta.id) %>
						  <%= link_to "削除", instag_path(insta.id), method: :delete, data: {confirm:"消していい?"} %>
						</div>
					</div>
					<% end %>
				</div>
			</section>
			<!--</div>-->
			<!--</div>-->

      <!--
      お気に入りしたblog一覧
      タイトルと内容を表示しているだけ
      -->

			<h2>お気に入り一覧</h2>
			<section class="block-body" id="blog">
				<div class="row">
				  <% @favorite_instag.each do |insta| %>
					<div class="col-sm-4 blog-post3">
						<!--<img src="/images/bike_water1-1000x600.jpg">-->
						<div class="blog-post_content">
							<%= image_tag insta.image.url if insta.image? %><BR>
							<%= link_to insta.content, instag_path(insta.id) %>
						</div>
						<div>
		          <%= link_to "お気に入りを解除する", instag_favorite_path(instag_id: insta.id), method: :delete, name: "user_index", class: 'btn btn-danger' %>
						</div>
					</div>
					<% end %>
				</div>
			</section>

    </div>
  </div>
</div>